<h1>Add Your Venue:</h1>
<div class="container form-container">
  <%= simple_form_for @venue do |f| %>

    <% if @venue.errors.any? %>
      <div id="error_explanation" class="error-message">
        <p>Oops! Something went wrong!</p>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :name, input_html: {class: "rounded-input"}, placeholder: "Enter the name of the venue" %>
      <%= f.input :address, input_html: {class: "rounded-input"}, placeholder: "Enter the address" %>
    </div>

    <div class="form-group">
      <%= f.input :description, as: :text, input_html: {rows: 5, class: "rounded-textarea"}, placeholder: "Describe the venue" %>
      <%= f.input :price, input_html: {class: "rounded-input"}, placeholder: "Enter the price per hour" %>
    </div>

    <div class="form-group">
      <%= f.input :image, as: :file, label: "Upload Image", input_html: {class: "form-control-file"} %>
    </div>

    <%= f.button :submit, "Create Venue", class: "btn btn-success" %>
  <% end %>
</div>
