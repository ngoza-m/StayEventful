
<div class="container">

    <h3 class="mt-4">Welcome, <em><%= current_user.email %> </em></h3>

    <div class="profile row my-4">


    
        

    <div class="col-6 p-4">
        <h2>Manage Your Venues</h2>
        <% @venues.each do |venue| %>
        <div class="card-product mb-4">
            <img src=<%= venue.image_url %> >
            <div class="card-product-infos">
              <h2><%= venue.name %></h2>
              <div class="location-with-icon">
                <i class="fa-solid fa-location-dot pb-2" style="color: #fe019a;"></i>
                <div class ="pt-1"><p> <%= venue.address %> </p> </div>
              </div>
              <!-- <p> <%= venue.description %></p> -->
              
              <div class=" my-2">
                <%= link_to "Edit", edit_venue_path(venue) %>
                <%= link_to "Delete",
                  venue_path(venue),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </div>
            </div>
          </div>
          <% end %>
    </div>

    <div class="col-6 p-4">
        <h2>Manage Your Bookings</h2>
        <% @bookings.each do |booking| %>
        <div class="card-product mb-4">
            <img src=<%= booking.venue.image_url %> >
            <div class="card-product-infos">
                <h2><%= booking.venue.name %></h2>
                <p> <strong>Date:</strong> <%= booking.date %></p>
                <p><strong> Total: </strong>â‚¬<%= booking.venue.price * booking.hours  %></p>
                <div class="location-with-icon">
                    <!-- <i class="fa-solid fa-location-dot pb-2" style="color: #fe019a;"></i> -->
                    <!-- <div class ="pt-1"><p><%= booking.venue.address %> </p> </div> -->
                </div>
                <div class=" mt-2">
                    <%= link_to "Edit", edit_booking_path(booking) %>
                    <%= link_to "Delete",
                      booking_path(booking),
                      data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"} %>
                  </div>
            </div>
        </div>
        <% end %>
    </div>


</div>
</div>